{
  "name": "react-apollo-starter",
  "version": "1.0.0",
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@material-ui/core": "^4.9.4",
    "@material-ui/icons": "^4.9.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-datasource-rest": "^0.8.0",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "apollo-server-express": "^2.9.0",
    "apollo-upload-client": "^13.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.3",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "react-swipeable-views": "^0.13.9"
  },
  "scripts": {
    "clean": "rimraf server/build",
    "dev": "run-p client-dev server-dev",
    "client-dev": "cd client && react-scripts start",
    "client-build": "cd client && react-scripts build",
    "server-compose": "run-s clean server-build server-prod",
    "server-prod": "cd server/build && nodemon --exec babel-node src/index.js",
    "server-build": "babel server -d server/build",
    "build": "run-s clean client-build server-compose",
    "server-dev": "cd server && NODE_ENV=development nodemon src/index.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "eslint-loader": "^3.0.2",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  },
  "license": "ISC"
}
